<div class='row'>
  <div class='col-xs-12 center'>
    <h1>Groups</h1>
  </div>
</div>
<table class='table table-striped table-condensed'>
  <tr>
    <th>Name</th>
  </tr>
  <% @groups.each do |group| %>
    <tr>
      <td>
        <a href='/groups/<%= group.id %>' class='click-highlight'>
          <%= group.name %>
        </a>
      </td.
    </tr>
  <% end %>
</table>
<div class='row'>
  <div class='col-xs-12'>
    <%= link_to 'New Group', new_group_path, class: 'btn btn-default little-margin' %>
  </div>
</div>
