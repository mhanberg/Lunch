<%= bootstrap_form_for @rating do |f| %>
  <div class='row'>
    <div class='col-xs-offset-3 col-xs-6'>
      <%= f.text_field :comment %>

      <%= f.select :score, Rating.scores, prompt: 'Select a score', required: true %>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-offset-6 col-xs-3'>
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :meal_id %>
<% end %>
<% unless @rating.new_record? %>
  <hr>
  <div class='row'>
    <div class='col-xs-12'>
      <span><b>Average Score:</b> <%= @average %></span>
    </div>
  </div>
<% end %>
